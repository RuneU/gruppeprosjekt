@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NøstedWeb</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bacit_dotnet.MVC.styles.css" asp-append-version="true" />

</head>

<body class="bg-gray-100 min-h-screen flex items-center">

    <div class="bg-white p-8 rounded-lg shadow-lg w-2/3 ml-auto">
        <div class="mb-4">
            <label for="fornavn" class="block text-gray-700 text-sm font-bold mb-2">Fornavn</label>
            <input type="text" id="fornavn" name="fornavn" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>
        <div class="mb-4">
            <label for="etternavn" class="block text-gray-700 text-sm font-bold mb-2">Etternavn</label>
            <input type="text" id="etternavn" name="etternavn" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>
        <div class="mb-4">
            <label for="epost" class="block text-gray-700 text-sm font-bold mb-2">Epost Adresse</label>
            <input type="text" id="epost" name="epost" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>
        <div class="mb-4">
            <label for="adresse" class="block text-gray-700 text-sm font-bold mb-2">Adresse</label>
            <input type="text" id="adresse" name="adresse" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>
        <div class="mb-4">
            <label for="postnummer" class="block text-gray-700 text-sm font-bold mb-2">Post Nummer</label>
            <input type="text" id="postnummer" name="postnummer" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>
    </div>

</body>

</html>