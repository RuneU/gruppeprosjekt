@{
    ViewData["Title"] = "- NøstedWeb";
    Layout = null; // Remove this line or set it to null
}
@model bacit_dotnet.MVC.Models.Login.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NøstedWeb</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bacit_dotnet.MVC.styles.css" asp-append-version="true" />

</head>

<body>

    <div>
        <div class="absolute inset-y-0 right-0 left-1/2 text-center bg-gray-100">
            <div>
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        Velkommen
                    </h1>
                    <form method="post" class="space-y-4 md:space-y-6" action="#">
                        <div>
                            <label for="brukernavn" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Brukernavn</>
                            <input type="text" name="brukernavn" id="brukernavn" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="olanordmann"> @* required=""*@
                        </div>
                        <div>
                            <label for="passord" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Passord</>
                            <input type="password" name="passord" id="passord" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"> @*required=""*@
                        </div>
                        <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                            Glemt passord? Ta kontakt med adminstrator
                        </p>
                        <input type='button' value='Login' id='myButton' onClick='redirectOnClick()' / class="w-full text-gray-500 bg-gray-800 hover:text-yellow-500 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                        
                    </form>
                </div>
            </div>
        </div>
        <div class="flex items-center justify-center h-screen absolute inset-y-0 left-0 right-1/2 bg-gray-800">
            <h1 class="text-gray-500 font-mono text-6xl">
                Nøsted&
            </h1>
        </div>
    </div>

</body>

<script>
    function redirectOnClick() {
        document.location = 'Home/Index';
    }
</script>

</html>