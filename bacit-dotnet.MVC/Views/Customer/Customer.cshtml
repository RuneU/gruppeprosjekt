@{
    ViewData["Title"] = "bacit_dotnet.MVC";

}
@model bacit_dotnet.MVC.Models.Customer
<div>
    <div class="text-center mt-10 ml-60">
        <div>
            <h1 class="text-3xl font-bold mr-20">
                Kunde-Informasjon 1/3
            </h1>
        </div>
        <br>
        <div>
            @using (Html.BeginForm("Create", "Customer"))
            {
                @Html.AntiForgeryToken()
            
            <form asp-action="Create" asp-controller="Customer" method="post">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="grid gap-6 mb-6 max-w-2xl ml-32">
                    <div>
                        <label asp-for="FirstName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Fornavn</label>
                        <input asp-for="FirstName" type="text" id="FirstName" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Ola" required>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="LastName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Etternavn</label>
                        <input asp-for="LastName" type="text" id="LastName" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Nordmann" required>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="CustomerEmail" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Epost</label>
                        <input asp-for="CustomerEmail" type="text" id="Email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Epost" required>
                        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Adress" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Adresse</label>
                        <input asp-for="Adress" type="text" id="Adress" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Nordmannsgate 16" required>
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="ZipCode" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Postnummer</label>
                        <input asp-for="ZipCode" type="text" id="ZipCode" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="4618 ex." required>
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="PhoneNumber" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Telefonnummer</label>
                        <input asp-for="PhoneNumber" type="text" id="PhoneNumber" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="xxx-xx-xxx" required>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="grid gap-6 mb-6 md:grid-cols-1"></div>
                    <div>
                        <div class="grid mb-6 md:grid-cols-2">
                            <div class="inline-flex gap-6">
                                <!--CSRF Beskyttelse-->
                                <input name="_RequestVerificationToken" type="hidden"
                                       value="6fGBtLZmVBZ59oUad1Fr33uPxANKY9q3Srr5y[...]"/>
                                <button asp-controller="Home" asp-action="Index" class="bg-gray-800 text-gray-500 hover:text-yellow-500 font-bold py-2 px-4 rounded">
                                    Tilbake
                                </button>
                                <div>
                                    <input type="submit" value="Neste" class="bg-gray-800 text-gray-500 hover:text-yellow-500 font-bold py-2 px-4 rounded"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            }
        </div>
    </div>
</div>